<Window x:Class="WindowsDb2Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsDb2Editor"
        xmlns:controls="clr-namespace:WindowsDb2Editor.Controls"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        Title="DbExplorer - DB2 Database Manager" 
        Height="800" 
        Width="1200"
        WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar - Word-inspired modern design -->
        <Menu Grid.Row="0" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}">
            <MenuItem Header="_File" Padding="12,8">
                <MenuItem Header="_New Connection" Click="NewConnection_Click" InputGestureText="Ctrl+N">
                    <MenuItem.Icon>
                        <TextBlock Text="➕" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem x:Name="RecentConnectionsMenuItem" Header="_Recent Connections">
                    <MenuItem.Icon>
                        <TextBlock Text="🕐" FontSize="16"/>
                    </MenuItem.Icon>
                    <!-- Recent connections will be populated dynamically -->
                    <MenuItem Header="(No recent connections)" IsEnabled="False"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Close Tab" Click="CloseTab_Click" InputGestureText="Ctrl+W">
                    <MenuItem.Icon>
                        <TextBlock Text="✖" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click" InputGestureText="Alt+F4">
                    <MenuItem.Icon>
                        <TextBlock Text="🚪" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_View" Padding="12,8">
                <MenuItem Header="_Dark Theme" Click="ToggleDarkMode_Click" InputGestureText="Ctrl+D">
                    <MenuItem.Icon>
                        <TextBlock Text="🌙" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Cycle _Theme (Dark/Light/System)" ToolTip="Press Ctrl+D to cycle through themes"/>
                <Separator/>
                <MenuItem Header="Database _Load Monitor..." Click="DatabaseLoadMonitor_Click" Tag="AccessLevel:Middle">
                    <MenuItem.Icon>
                        <TextBlock Text="📊" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Lock Monitor..." Click="LockMonitor_Click" Tag="AccessLevel:DBA">
                    <MenuItem.Icon>
                        <TextBlock Text="🔒" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Statistics Manager..." Click="StatisticsManager_Click" Tag="AccessLevel:Middle">
                    <MenuItem.Icon>
                        <TextBlock Text="📈" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Active Sessions..." Click="ActiveSessions_Click" Tag="AccessLevel:DBA">
                    <MenuItem.Icon>
                        <TextBlock Text="👥" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_CDC Manager..." Click="CdcManager_Click" Tag="AccessLevel:DBA">
                    <MenuItem.Icon>
                        <TextBlock Text="📡" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Unused Objects..." Click="UnusedObjects_Click" Tag="AccessLevel:DBA">
                    <MenuItem.Icon>
                        <TextBlock Text="🗑️" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Source Code Browser..." Click="SourceBrowser_Click" Tag="AccessLevel:Middle">
                    <MenuItem.Icon>
                        <TextBlock Text="📚" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="DDL _Generator..." Click="DdlGenerator_Click" Tag="AccessLevel:Middle">
                    <MenuItem.Icon>
                        <TextBlock Text="📝" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Comment Manager..." Click="CommentManager_Click" Tag="AccessLevel:Middle">
                    <MenuItem.Icon>
                        <TextBlock Text="💬" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Package Analyzer..." Click="PackageAnalyzer_Click" Tag="AccessLevel:Middle">
                    <MenuItem.Icon>
                        <TextBlock Text="📦" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Dependency Analyzer..." Click="DependencyAnalyzer_Click" Tag="AccessLevel:Middle">
                    <MenuItem.Icon>
                        <TextBlock Text="🔗" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Migration Assistant..." Click="MigrationAssistant_Click" Tag="AccessLevel:DBA">
                    <MenuItem.Icon>
                        <TextBlock Text="🔄" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Mermaid Visual Designer..." Click="MermaidDesigner_Click" Tag="AccessLevel:Middle">
                    <MenuItem.Icon>
                        <TextBlock Text="🎨" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Settings..." Click="Settings_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="⚙" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Query _History..." Click="QueryHistory_Click" InputGestureText="Ctrl+H">
                    <MenuItem.Icon>
                        <TextBlock Text="📜" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Help" Padding="12,8">
                <MenuItem Header="_About" Click="About_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ℹ" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <!-- Main content area -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Welcome Panel (shown when no connections) -->
            <controls:WelcomePanel x:Name="WelcomePanel" 
                               Grid.Row="0"
                               Visibility="Visible"
                               ConnectionRequested="WelcomePanel_ConnectionRequested"
                               NewConnectionRequested="WelcomePanel_NewConnectionRequested"
                               ManageConnectionsRequested="WelcomePanel_ManageConnectionsRequested"/>

            <!-- Tab Control for Connections -->
            <TabControl Grid.Row="0" x:Name="ConnectionTabs" Margin="5" SelectionChanged="ConnectionTabs_SelectionChanged"
                       Visibility="Collapsed">
                <!-- Tabs will be added dynamically -->
            </TabControl>

            <!-- Status Bar -->
            <StatusBar Grid.Row="0" x:Name="MainStatusBar" MinHeight="28" VerticalAlignment="Bottom" 
                       Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" Visibility="Collapsed"
                       Padding="4,2">
                <StatusBarItem>
                    <TextBlock x:Name="StatusBarText" Text="Ready" TextWrapping="NoWrap"/>
                </StatusBarItem>
                <Separator/>
                <StatusBarItem>
                    <TextBlock x:Name="ConnectionCountText" Text="0 connections" TextWrapping="NoWrap"/>
                </StatusBarItem>
            </StatusBar>
        </Grid>

    </Grid>
</Window>
