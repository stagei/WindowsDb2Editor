<UserControl x:Class="WindowsDb2Editor.Controls.CdcManagerPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Schema:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="SchemaComboBox" Width="150" SelectedIndex="0" Margin="0,0,20,0"/>
            <CheckBox x:Name="ShowOnlyDisabledCheckBox" Content="Show only disabled" Margin="0,0,20,0"/>
            <Button x:Name="RefreshButton" Content="ðŸ”„ Refresh" Click="RefreshButton_Click" Padding="10,5"/>
        </StackPanel>
        
        <DataGrid Grid.Row="1" x:Name="CdcDataGrid" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Extended">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Schema" Binding="{Binding TabSchema}" Width="120"/>
                <DataGridTextColumn Header="Table" Binding="{Binding TabName}" Width="200"/>
                <DataGridTextColumn Header="Data Capture" Binding="{Binding DataCapture}" Width="100"/>
                <DataGridTextColumn Header="Status" Binding="{Binding CdcStatus}" Width="150"/>
                <DataGridTextColumn Header="Tablespace" Binding="{Binding TableSpace}" Width="120"/>
                <DataGridTextColumn Header="" Binding="{Binding CdcIcon}" Width="40"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock x:Name="StatusText" VerticalAlignment="Center" Margin="0,0,20,0" Text="Ready"/>
            <Button x:Name="GenerateEnableButton" Content="ðŸ“ Generate ENABLE Script" Click="GenerateEnable_Click" Padding="10,5" Margin="5,0"/>
            <Button x:Name="GenerateDisableButton" Content="ðŸ“ Generate DISABLE Script" Click="GenerateDisable_Click" Padding="10,5" Margin="5,0"/>
            <Button x:Name="ExportButton" Content="ðŸ“Š Export" Click="ExportButton_Click" Padding="10,5" Margin="5,0"/>
        </StackPanel>
    </Grid>
</UserControl>

