<UserControl x:Class="WindowsDb2Editor.Controls.MigrationAssistantPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Schema:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="SchemaComboBox" Width="150" Margin="0,0,20,0"/>
            <TextBlock Text="Active Threshold (years):" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="ThresholdTextBox" Width="50" Text="3" Margin="0,0,20,0"/>
            <Button x:Name="AnalyzeButton" Content="ðŸ” Analyze" Click="AnalyzeButton_Click" Padding="10,5"/>
        </StackPanel>
        
        <DataGrid Grid.Row="1" x:Name="CandidatesDataGrid" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Schema" Binding="{Binding Schema}" Width="120"/>
                <DataGridTextColumn Header="Table" Binding="{Binding TableName}" Width="200"/>
                <DataGridTextColumn Header="Last Used" Binding="{Binding LastUsed, StringFormat=yyyy-MM-dd}" Width="120"/>
                <DataGridTextColumn Header="Row Count" Binding="{Binding RowCount, StringFormat=N0}" Width="120"/>
                <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="80"/>
                <DataGridTextColumn Header="Action" Binding="{Binding MigrationStatus}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock x:Name="StatusText" VerticalAlignment="Center" Margin="0,0,20,0" Text="Ready"/>
            <Button x:Name="GenerateScriptButton" Content="ðŸ“ Generate Script" Click="GenerateScript_Click" Padding="10,5" Margin="5,0"/>
            <Button x:Name="ExportButton" Content="ðŸ“Š Export" Click="ExportButton_Click" Padding="10,5" Margin="5,0"/>
        </StackPanel>
    </Grid>
</UserControl>

