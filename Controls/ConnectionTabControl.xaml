<UserControl x:Class="WindowsDb2Editor.Controls.ConnectionTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:ui="http://schemas.modernwpf.com/2019">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" MinWidth="150"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Database Object Browser (Left Panel) -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Text="Database Objects" FontWeight="Bold" Margin="10,10,10,5"
                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            
            <TreeView Grid.Row="1" x:Name="DatabaseTreeView" Margin="5" 
                      Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
                <TreeView.ItemContainerStyle>
                    <Style TargetType="TreeViewItem">
                        <Setter Property="IsExpanded" Value="False"/>
                        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource SystemControlHighlightAltBaseHighBrush}"/>
                                <Setter Property="Background" Value="{DynamicResource SystemControlHighlightAccentBrush}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundListMediumBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TreeView.ItemContainerStyle>
            </TreeView>
        </Grid>
        
        <!-- Vertical Splitter -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                      Background="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
        
        <!-- Main Content (Right Panel) -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Toolbar - Word-inspired ribbon style -->
            <ToolBar Grid.Row="0" Height="48" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}">
                <Button x:Name="ExecuteButton" Click="Execute_Click" Padding="15,8" ToolTip="Execute SQL Query (F5)">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="â–¶" FontSize="16" Margin="0,0,8,0" Foreground="Green"/>
                        <TextBlock Text="Execute" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Separator Margin="5,0"/>
                <Button x:Name="FormatButton" Click="Format_Click" Padding="15,8" ToolTip="Format SQL Code">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âœ¨" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Format" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Separator Margin="5,0"/>
                <Button x:Name="ClearButton" Click="Clear_Click" Padding="15,8" ToolTip="Clear Editor and Results">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ—‘" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Clear" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Separator Margin="5,0"/>
                <Button x:Name="ExportButton" Click="Export_Click" Padding="15,8" ToolTip="Export Results">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ’¾" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Export" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Separator Margin="5,0"/>
                <Button x:Name="OpenButton" Click="Open_Click" Padding="15,8" ToolTip="Open SQL Script (Ctrl+O)">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“‚" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Open" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="SaveButton" Click="Save_Click" Padding="15,8" ToolTip="Save SQL Script (Ctrl+S)">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ’¾" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Save" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Separator Margin="10,0"/>
                <TextBlock x:Name="StatusText" VerticalAlignment="Center" Margin="15,0,0,0" 
                           Text="Ready" FontWeight="SemiBold"
                           Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            </ToolBar>

            <!-- SQL Editor -->
            <Border Grid.Row="1" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="1" Margin="5">
                <avalonedit:TextEditor x:Name="SqlEditor"
                                       FontFamily="Consolas"
                                       FontSize="14"
                                       ShowLineNumbers="True"
                                       WordWrap="False"
                                       VerticalScrollBarVisibility="Auto"
                                       HorizontalScrollBarVisibility="Auto"/>
            </Border>

            <!-- Horizontal Splitter -->
            <GridSplitter Grid.Row="2" Height="5" HorizontalAlignment="Stretch" 
                          Background="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>

            <!-- Results Grid -->
            <Border Grid.Row="3" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="1" Margin="5">
                <DataGrid x:Name="ResultsGrid"
                          AutoGenerateColumns="True"
                          IsReadOnly="True"
                          AlternatingRowBackground="{DynamicResource SystemControlBackgroundAltHighBrush}"
                          GridLinesVisibility="All"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"/>
            </Border>

            <!-- Status Bar with Pagination Controls -->
            <StatusBar Grid.Row="4" Height="32" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}">
                <StatusBarItem>
                    <TextBlock x:Name="RowCountText" Text="No results" VerticalAlignment="Center" FontWeight="SemiBold"/>
                </StatusBarItem>
                <Separator Margin="10,0"/>
                <StatusBarItem>
                    <TextBlock Text="Pagination:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="SemiBold"/>
                </StatusBarItem>
                <StatusBarItem>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="PreviousButton" Content="â—€ Previous" Width="90" Height="24" 
                                Click="Previous_Click" IsEnabled="False" Margin="0,0,5,0"
                                ToolTip="Load previous page of results"
                                FontWeight="SemiBold"/>
                        <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                                BorderThickness="1" CornerRadius="3" Padding="8,2" Margin="5,0"
                                Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
                            <TextBlock x:Name="PageInfoText" Text="Page 1" VerticalAlignment="Center" 
                                       MinWidth="80" TextAlignment="Center" FontWeight="Bold"/>
                        </Border>
                        <Button x:Name="NextButton" Content="Next â–¶" Width="90" Height="24" 
                                Click="Next_Click" IsEnabled="False" Margin="5,0,0,0"
                                ToolTip="Load next page of results"
                                FontWeight="SemiBold"/>
                    </StackPanel>
                </StatusBarItem>
                <Separator Margin="10,0"/>
                <StatusBarItem HorizontalAlignment="Right">
                    <TextBlock x:Name="ExecutionTimeText" Text="" VerticalAlignment="Center"/>
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Grid>
</UserControl>
