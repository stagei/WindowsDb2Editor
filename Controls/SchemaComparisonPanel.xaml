<UserControl x:Class="WindowsDb2Editor.Controls.SchemaComparisonPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with connection selection -->
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Source Connection -->
            <GroupBox Grid.Column="0" Header="ðŸ“¥ Source" Padding="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Connection:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" x:Name="SourceConnectionComboBox" 
                              SelectionChanged="SourceConnection_SelectionChanged" Margin="0,0,10,0"/>
                    
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Schema:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox Grid.Row="0" Grid.Column="3" x:Name="SourceSchemaComboBox"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" x:Name="SourceInfoText" 
                               Text="Select connection..." FontSize="11" Foreground="Gray" Margin="0,5,0,0"/>
                </Grid>
            </GroupBox>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="â‡„" FontSize="28" FontWeight="Bold" 
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
            </StackPanel>

            <!-- Target Connection -->
            <GroupBox Grid.Column="2" Header="ðŸ“¤ Target" Padding="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Connection:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" x:Name="TargetConnectionComboBox" 
                              SelectionChanged="TargetConnection_SelectionChanged" Margin="0,0,10,0"/>
                    
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Schema:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox Grid.Row="0" Grid.Column="3" x:Name="TargetSchemaComboBox"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" x:Name="TargetInfoText" 
                               Text="Select connection..." FontSize="11" Foreground="Gray" Margin="0,5,0,0"/>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Compare button and progress -->
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" x:Name="CompareButton" Content="ðŸ” Compare Schemas" 
                    Click="Compare_Click" Style="{StaticResource AccentButtonStyle}" Padding="20,8"/>
            
            <ProgressBar Grid.Column="1" x:Name="ProgressBar" Height="20" Margin="15,0" 
                         IsIndeterminate="True" Visibility="Collapsed"/>
            <TextBlock Grid.Column="1" x:Name="ProgressText" VerticalAlignment="Center" 
                       Margin="20,0" Visibility="Collapsed"/>
            
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <TextBlock x:Name="SummaryText" VerticalAlignment="Center" FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>

        <!-- Main content area: Tree + Details -->
        <Grid Grid.Row="2" Margin="10,0,10,10" x:Name="ResultsGrid" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" MinWidth="200"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Difference Tree View -->
            <Border Grid.Column="0" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                    BorderThickness="1" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Filter controls -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="8">
                        <CheckBox x:Name="ShowOnlyDifferences" Content="Hide identical" 
                                  IsChecked="True" Checked="Filter_Changed" Unchecked="Filter_Changed"/>
                        <TextBox x:Name="SearchBox" Width="150" Margin="15,0,0,0" 
                                 ui:ControlHelper.PlaceholderText="Filter..." 
                                 TextChanged="SearchBox_TextChanged"/>
                    </StackPanel>
                    
                    <!-- Tree View -->
                    <TreeView Grid.Row="1" x:Name="DifferenceTreeView" 
                              SelectedItemChanged="DifferenceTreeView_SelectedItemChanged">
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem" BasedOn="{StaticResource {x:Type TreeViewItem}}">
                                <Setter Property="IsExpanded" Value="True"/>
                            </Style>
                        </TreeView.ItemContainerStyle>
                    </TreeView>
                    
                    <!-- Selection summary -->
                    <Border Grid.Row="2" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                            Padding="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" x:Name="SelectionCountText" Text="0 items selected"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="Select All" Click="SelectAll_Click" Padding="8,3" Margin="0,0,5,0"/>
                                <Button Content="Clear" Click="ClearSelection_Click" Padding="8,3"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                          Background="Transparent" Cursor="SizeWE"/>

            <!-- Details Panel -->
            <Border Grid.Column="2" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                    BorderThickness="1" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Merge direction controls -->
                    <Border Grid.Row="0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                            Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock x:Name="SelectedItemTitle" Text="Select an item to view details" 
                                           FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal" x:Name="MergeDirectionPanel" 
                                        Visibility="Collapsed">
                                <TextBlock Text="Merge:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <Button x:Name="MergeToTargetButton" Content="â†’ Target" 
                                        ToolTip="Apply source to target" Click="MergeToTarget_Click"
                                        Padding="10,5" Margin="0,0,5,0"/>
                                <Button x:Name="MergeToSourceButton" Content="â† Source" 
                                        ToolTip="Apply target to source" Click="MergeToSource_Click"
                                        Padding="10,5" Margin="0,0,5,0"/>
                                <Button x:Name="MergeBothButton" Content="â‡„ Both" 
                                        ToolTip="Apply both directions" Click="MergeBoth_Click"
                                        Padding="10,5"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Detail content area -->
                    <TabControl Grid.Row="1" x:Name="DetailTabControl">
                        <!-- Properties Tab -->
                        <TabItem Header="ðŸ“‹ Properties">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" x:Name="PropertiesHeader" 
                                           Text="Property differences:" Margin="0,0,0,10"/>
                                
                                <DataGrid Grid.Row="1" x:Name="PropertiesGrid" 
                                          AutoGenerateColumns="False" IsReadOnly="True"
                                          GridLinesVisibility="Horizontal" CanUserAddRows="False"
                                          HeadersVisibility="Column">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Property" Binding="{Binding PropertyName}" Width="150"/>
                                        <DataGridTextColumn Header="Source Value" Binding="{Binding SourceValue}" Width="*">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Background" Value="#1A00FF00"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="Target Value" Binding="{Binding TargetValue}" Width="*">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Background" Value="#1AFF0000"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </TabItem>
                        
                        <!-- Source Code Diff Tab -->
                        <TabItem Header="ðŸ“ Source Code" x:Name="SourceCodeTab">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Source side -->
                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Background="#1A00FF00" Padding="8">
                                        <TextBlock Text="Source" FontWeight="SemiBold"/>
                                    </Border>
                                    <TextBox Grid.Row="1" x:Name="SourceCodeEditor" 
                                             IsReadOnly="True" AcceptsReturn="True"
                                             VerticalScrollBarVisibility="Auto"
                                             HorizontalScrollBarVisibility="Auto"
                                             FontFamily="Consolas" FontSize="12"
                                             TextWrapping="NoWrap"/>
                                </Grid>
                                
                                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                                              Background="Transparent"/>
                                
                                <!-- Target side -->
                                <Grid Grid.Column="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Background="#1AFF0000" Padding="8">
                                        <TextBlock Text="Target" FontWeight="SemiBold"/>
                                    </Border>
                                    <TextBox Grid.Row="1" x:Name="TargetCodeEditor" 
                                             IsReadOnly="True" AcceptsReturn="True"
                                             VerticalScrollBarVisibility="Auto"
                                             HorizontalScrollBarVisibility="Auto"
                                             FontFamily="Consolas" FontSize="12"
                                             TextWrapping="NoWrap"/>
                                </Grid>
                            </Grid>
                        </TabItem>
                        
                        <!-- DDL Preview Tab -->
                        <TabItem Header="ðŸ“œ DDL Preview">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Text="Generated DDL for selected item:" Margin="0,0,0,10"/>
                                
                                <TextBox Grid.Row="1" x:Name="DdlPreviewEditor" 
                                         IsReadOnly="True" AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Auto"
                                         HorizontalScrollBarVisibility="Auto"
                                         FontFamily="Consolas" FontSize="12"
                                         TextWrapping="NoWrap"/>
                                
                                <Button Grid.Row="2" Content="ðŸ“‹ Copy DDL" Click="CopyDdl_Click" 
                                        HorizontalAlignment="Right" Margin="0,10,0,0" Padding="15,5"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Border>
        </Grid>

        <!-- Bottom action bar -->
        <Border Grid.Row="3" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                Padding="10" x:Name="ActionBar" Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" x:Name="ActionInfoText" VerticalAlignment="Center"
                           Text="Select items and choose merge direction to generate migration scripts"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="GenerateScriptsButton" Content="ðŸ”§ Generate Migration Scripts" 
                            Click="GenerateScripts_Click" Style="{StaticResource AccentButtonStyle}"
                            Padding="20,8" Margin="0,0,10,0" IsEnabled="False"/>
                    <Button Content="âŒ Close" Click="Close_Click" Padding="15,8"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
