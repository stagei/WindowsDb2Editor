<UserControl x:Class="WindowsDb2Editor.Controls.UnusedObjectsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Unused Threshold (days):" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="ThresholdTextBox" Width="80" Text="365" Margin="0,0,20,0"/>
            <CheckBox x:Name="IncludePackagesCheckBox" Content="Include Packages" IsChecked="True" Margin="0,0,20,0"/>
            <Button x:Name="RefreshButton" Content="ðŸ”„ Refresh" Click="RefreshButton_Click" Padding="10,5"/>
        </StackPanel>
        
        <DataGrid Grid.Row="1" x:Name="UnusedObjectsDataGrid" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Extended">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Type" Binding="{Binding ObjectType}" Width="100"/>
                <DataGridTextColumn Header="Schema" Binding="{Binding Schema}" Width="120"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Last Used" Binding="{Binding LastUsed, StringFormat=yyyy-MM-dd}" Width="120"/>
                <DataGridTextColumn Header="Days Unused" Binding="{Binding DaysUnused}" Width="100"/>
                <DataGridTextColumn Header="Status" Binding="{Binding UnusedStatus}" Width="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock x:Name="StatusText" VerticalAlignment="Center" Margin="0,0,20,0" Text="Ready"/>
            <Button x:Name="GenerateDropButton" Content="ðŸ“ Generate DROP Script" Click="GenerateDrop_Click" Padding="10,5" Margin="5,0"/>
            <Button x:Name="ExportButton" Content="ðŸ“Š Export" Click="ExportButton_Click" Padding="10,5" Margin="5,0"/>
        </StackPanel>
    </Grid>
</UserControl>

