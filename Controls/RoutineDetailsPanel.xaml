<UserControl x:Class="WindowsDb2Editor.Controls.RoutineDetailsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock x:Name="RoutineNameText" Text="Routine Name" FontSize="20" FontWeight="Bold"
                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            <TextBlock x:Name="RoutineInfoText" Text="Schema.Routine" FontSize="12" Margin="0,5,0,0"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
        </StackPanel>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" x:Name="DetailsTabControl">
            <!-- Source Code Tab -->
            <TabItem Header="ðŸ“œ Source Code">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="SourceCodeTextBox" 
                             Grid.Row="0"
                             IsReadOnly="True"
                             AcceptsReturn="True"
                             TextWrapping="NoWrap"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             FontFamily="Consolas"
                             FontSize="12"
                             Margin="5"/>
                    <Button Grid.Row="1" Content="ðŸ“‹ Copy Source" Width="120" Height="30" 
                            HorizontalAlignment="Right" Margin="5"
                            Click="CopySource_Click"/>
                </Grid>
            </TabItem>

            <!-- Parameters Tab -->
            <TabItem Header="ðŸ“¥ Parameters">
                <DataGrid x:Name="ParametersGrid" 
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Parameter" Binding="{Binding [PARMNAME]}" Width="*"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding [TYPENAME]}" Width="120"/>
                        <DataGridTextColumn Header="Mode" Binding="{Binding [PARM_MODE]}" Width="80"/>
                        <DataGridTextColumn Header="Length" Binding="{Binding [LENGTH]}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Properties Tab -->
            <TabItem Header="âš™ï¸ Properties">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Language:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="LanguageText" Text="-" Margin="10,5"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Parameter Count:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="ParamCountText" Text="-" Margin="10,5"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Owner:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="OwnerText" Text="-" Margin="10,5"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Created:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="CreatedText" Text="-" Margin="10,5"/>
                            
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Valid:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="ValidText" Text="-" Margin="10,5"/>
                            
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Remarks:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" x:Name="RemarksText" Text="-" Margin="10,5" TextWrapping="Wrap"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
