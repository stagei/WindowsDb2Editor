<UserControl x:Class="WindowsDb2Editor.Controls.ViewDetailsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock x:Name="ViewNameText" Text="View Name" FontSize="20" FontWeight="Bold"
                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            <TextBlock x:Name="ViewInfoText" Text="Schema.View" FontSize="12" Margin="0,5,0,0"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
        </StackPanel>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" x:Name="DetailsTabControl">
            <!-- Definition Tab -->
            <TabItem Header="ðŸ“œ Definition">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="DefinitionTextBox" 
                             Grid.Row="0"
                             IsReadOnly="True"
                             AcceptsReturn="True"
                             TextWrapping="NoWrap"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             FontFamily="Consolas"
                             FontSize="12"
                             Margin="5"/>
                    <Button Grid.Row="1" Content="ðŸ“‹ Copy Definition" Width="130" Height="30" 
                            HorizontalAlignment="Right" Margin="5"
                            Click="CopyDefinition_Click"/>
                </Grid>
            </TabItem>

            <!-- Columns Tab -->
            <TabItem Header="ðŸ“‹ Columns">
                <DataGrid x:Name="ColumnsGrid" 
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Column Name" Binding="{Binding [ColumnName]}" Width="*"/>
                        <DataGridTextColumn Header="Data Type" Binding="{Binding [DataType]}" Width="120"/>
                        <DataGridTextColumn Header="Nullable" Binding="{Binding [Nullable]}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Dependencies Tab -->
            <TabItem Header="ðŸ”— Dependencies">
                <ListBox x:Name="DependenciesListBox" Margin="5"/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
