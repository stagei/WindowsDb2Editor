<UserControl x:Class="WindowsDb2Editor.Controls.DependencyGraphPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
             Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Schema:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="SchemaComboBox" Width="150" SelectionChanged="SchemaComboBox_SelectionChanged" Margin="0,0,20,0"/>
            <TextBlock Text="Table:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="TableComboBox" Width="200" Margin="0,0,20,0"/>
            <Button x:Name="AnalyzeButton" Content="ðŸ” Analyze" Click="AnalyzeButton_Click" Padding="10,5"/>
        </StackPanel>
        
        <TabControl Grid.Row="1">
            <TabItem Header="Incoming Dependencies">
                <DataGrid x:Name="IncomingDataGrid" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Object" Binding="{Binding Schema}" Width="120"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="180"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
                        <DataGridTextColumn Header="Depends On" Binding="{Binding DependsOnName}" Width="180"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Outgoing Dependencies">
                <DataGrid x:Name="OutgoingDataGrid" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Depends On Schema" Binding="{Binding DependsOnSchema}" Width="120"/>
                        <DataGridTextColumn Header="Depends On Name" Binding="{Binding DependsOnName}" Width="180"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding DependsOnType}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock x:Name="StatusText" VerticalAlignment="Center" Margin="0,0,20,0" Text="Ready"/>
            <Button x:Name="GenerateDropButton" Content="ðŸ“ Generate DROP Script" Click="GenerateDrop_Click" Padding="10,5" Margin="5,0"/>
            <Button x:Name="ExportButton" Content="ðŸ“Š Export" Click="ExportButton_Click" Padding="10,5" Margin="5,0"/>
        </StackPanel>
    </Grid>
</UserControl>

