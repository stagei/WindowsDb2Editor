<UserControl x:Class="WindowsDb2Editor.Controls.PackageDetailsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ“¦" FontSize="28" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <StackPanel>
                    <TextBlock x:Name="PackageNameText" Text="Package Name" FontSize="20" FontWeight="Bold"
                               Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                    <TextBlock x:Name="PackageInfoText" Text="Schema â€¢ Package" FontSize="12" Margin="0,5,0,0"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" x:Name="DetailsTabControl">
            <!-- Properties Tab -->
            <TabItem Header="âš™ï¸ Properties">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Package Name:" FontWeight="SemiBold" Margin="0,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="PkgNameValue" Text="-" Margin="10,5"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Schema:" FontWeight="SemiBold" Margin="0,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="PkgSchemaValue" Text="-" Margin="10,5"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Bound By:" FontWeight="SemiBold" Margin="0,5"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="BoundByValue" Text="-" Margin="10,5"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Owner:" FontWeight="SemiBold" Margin="0,5"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="OwnerValue" Text="-" Margin="10,5"/>
                        
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Isolation Level:" FontWeight="SemiBold" Margin="0,5"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="IsolationValue" Text="-" Margin="10,5"/>
                        
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Created:" FontWeight="SemiBold" Margin="0,5"/>
                        <TextBlock Grid.Row="5" Grid.Column="1" x:Name="CreatedValue" Text="-" Margin="10,5"/>
                        
                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Valid:" FontWeight="SemiBold" Margin="0,5"/>
                        <TextBlock Grid.Row="6" Grid.Column="1" x:Name="ValidValue" Text="-" Margin="10,5"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- SQL Statements Tab -->
            <TabItem Header="ðŸ“ SQL Statements">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" x:Name="StatementCountText" Text="Statements: 0" 
                               FontWeight="SemiBold" Margin="5"/>
                    
                    <DataGrid Grid.Row="1" x:Name="StatementsGrid" 
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Margin="5"
                              MouseDoubleClick="Statement_DoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Stmt No" Binding="{Binding [STMTNO]}" Width="80"/>
                            <DataGridTextColumn Header="Section" Binding="{Binding [SECTNO]}" Width="80"/>
                            <DataGridTextColumn Header="Text Preview" Binding="{Binding [TEXT]}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <Button Grid.Row="2" Content="ðŸ“‹ Copy Selected" Width="130" Height="30"
                            HorizontalAlignment="Right" Margin="5"
                            Click="CopyStatement_Click"/>
                </Grid>
            </TabItem>

            <!-- Dependencies Tab -->
            <TabItem Header="ðŸ”— Dependencies">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" x:Name="DependencyCountText" Text="Dependencies: 0" 
                               FontWeight="SemiBold" Margin="5"/>
                    
                    <DataGrid Grid.Row="1" x:Name="DependenciesGrid" 
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Margin="5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Type" Binding="{Binding [BTYPE]}" Width="80"/>
                            <DataGridTextColumn Header="Schema" Binding="{Binding [BSCHEMA]}" Width="150"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding [BNAME]}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
