<UserControl x:Class="WindowsDb2Editor.Controls.SourceCodeBrowserPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
             Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0" Margin="10">
                <TextBlock Text="Schema:" Margin="0,0,0,5"/>
                <ComboBox x:Name="SchemaComboBox" SelectionChanged="SchemaComboBox_SelectionChanged"/>
                <TextBlock Text="Object Type:" Margin="0,10,0,5"/>
                <ComboBox x:Name="ObjectTypeComboBox" SelectedIndex="0" SelectionChanged="ObjectTypeComboBox_SelectionChanged">
                    <ComboBoxItem Content="Procedures"/>
                    <ComboBoxItem Content="Functions"/>
                    <ComboBoxItem Content="Views"/>
                </ComboBox>
            </StackPanel>
            
            <ListBox Grid.Row="1" x:Name="ObjectsListBox" Margin="10" SelectionChanged="ObjectsListBox_SelectionChanged"/>
        </Grid>
        
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"/>
        
        <Grid Grid.Column="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" x:Name="ObjectNameText" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
            
            <avalonedit:TextEditor Grid.Row="1" x:Name="SourceCodeEditor" IsReadOnly="True" 
                                   FontFamily="Consolas" FontSize="12" ShowLineNumbers="True"/>
            
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button x:Name="CopyButton" Content="ðŸ“‹ Copy" Click="CopyButton_Click" Padding="10,5" Margin="5,0"/>
                <Button x:Name="ExportButton" Content="ðŸ’¾ Export to File" Click="ExportButton_Click" Padding="10,5" Margin="5,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>

