<Window x:Class="WindowsDb2Editor.Dialogs.UserDetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="User Details"
        Width="800"
        Height="650"
        MinWidth="700"
        MinHeight="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock x:Name="PrincipalNameText" Text="Principal Name" FontSize="22" FontWeight="Bold"
                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            <TextBlock x:Name="PrincipalTypeText" Text="Type" FontSize="13" Margin="0,5,0,0"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
        </StackPanel>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" x:Name="DetailsTabControl">
            <!-- Database Authorities Tab -->
            <TabItem Header="ðŸ” Database Authorities" x:Name="AuthoritiesTab">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="AuthoritiesPanel" Margin="10">
                        <!-- Authorities will be added dynamically -->
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Table Privileges Tab -->
            <TabItem Header="ðŸ“‹ Table Privileges" x:Name="TablePrivilegesTab">
                <DataGrid x:Name="TablePrivilegesGrid" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          Margin="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Schema" Binding="{Binding [Schema]}" Width="150"/>
                        <DataGridTextColumn Header="Table" Binding="{Binding [TableName]}" Width="200"/>
                        <DataGridTextColumn Header="SELECT" Binding="{Binding [SelectAuth]}" Width="80"/>
                        <DataGridTextColumn Header="INSERT" Binding="{Binding [InsertAuth]}" Width="80"/>
                        <DataGridTextColumn Header="UPDATE" Binding="{Binding [UpdateAuth]}" Width="80"/>
                        <DataGridTextColumn Header="DELETE" Binding="{Binding [DeleteAuth]}" Width="80"/>
                        <DataGridTextColumn Header="ALTER" Binding="{Binding [AlterAuth]}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Schema Privileges Tab -->
            <TabItem Header="ðŸ“ Schema Privileges" x:Name="SchemaPrivilegesTab">
                <DataGrid x:Name="SchemaPrivilegesGrid" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          Margin="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Schema" Binding="{Binding [SchemaName]}" Width="200"/>
                        <DataGridTextColumn Header="CREATE IN" Binding="{Binding [CreateInAuth]}" Width="100"/>
                        <DataGridTextColumn Header="ALTER IN" Binding="{Binding [AlterInAuth]}" Width="100"/>
                        <DataGridTextColumn Header="DROP IN" Binding="{Binding [DropInAuth]}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Routine Privileges Tab -->
            <TabItem Header="âš™ï¸ Routine Privileges" x:Name="RoutinePrivilegesTab">
                <DataGrid x:Name="RoutinePrivilegesGrid" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          Margin="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Schema" Binding="{Binding [Schema]}" Width="150"/>
                        <DataGridTextColumn Header="Routine" Binding="{Binding [SpecificName]}" Width="250"/>
                        <DataGridTextColumn Header="Execute" Binding="{Binding [ExecuteAuth]}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Roles Tab (for users) -->
            <TabItem Header="ðŸŽ­ Roles" x:Name="RolesTab" Visibility="Collapsed">
                <ListBox x:Name="RolesList" Margin="10" FontSize="14">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸŽ­" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding RoleName}" FontWeight="SemiBold"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>

            <!-- Members Tab (for roles/groups) -->
            <TabItem Header="ðŸ‘¥ Members" x:Name="MembersTab" Visibility="Collapsed">
                <ListBox x:Name="MembersList" Margin="10" FontSize="14">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ‘¤" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding Grantee}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>
        </TabControl>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Close" Width="100" Height="32" IsCancel="True" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>

