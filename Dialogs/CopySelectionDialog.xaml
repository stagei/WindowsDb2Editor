<Window x:Class="WindowsDb2Editor.Dialogs.CopySelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="Copy Selection"
        SizeToContent="Height"
        Width="500"
        MinHeight="300"
        MaxHeight="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Copy Selection to Clipboard" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"
                   Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>

        <!-- Selection info -->
        <TextBlock Grid.Row="1" 
                   x:Name="SelectionInfo"
                   Text="Selection: X rows Ã— Y columns"
                   FontSize="12"
                   Margin="0,0,0,15"
                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>

        <!-- Format selection -->
        <GroupBox Grid.Row="2" 
                  Header="Choose Format" 
                  Margin="0,0,0,15"
                  Padding="10"
                  Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}">
            <StackPanel>
                <RadioButton x:Name="CsvRadio" 
                             Content="CSV (Comma-Separated Values)" 
                             IsChecked="True" 
                             Margin="0,5"
                             Checked="FormatRadio_Changed"
                             Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                <RadioButton x:Name="TsvRadio" 
                             Content="TSV (Tab-Separated Values)" 
                             Margin="0,5"
                             Checked="FormatRadio_Changed"
                             Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            </StackPanel>
        </GroupBox>

        <!-- Options -->
        <GroupBox Grid.Row="3" 
                  Header="Options" 
                  Margin="0,0,0,15"
                  Padding="10"
                  Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}">
            <StackPanel>
                <CheckBox x:Name="IncludeHeadersCheckBox" 
                          Content="Include Column Headers" 
                          IsChecked="True" 
                          Margin="0,5"
                          Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                          ToolTip="Include column headers as the first row"/>
            </StackPanel>
        </GroupBox>

        <!-- Preview -->
        <GroupBox Grid.Row="4" 
                  Header="Preview" 
                  Margin="0,0,0,15"
                  Padding="10"
                  Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}">
            <TextBox x:Name="PreviewTextBox"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     FontFamily="Consolas"
                     FontSize="11"
                     Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                     Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button x:Name="CopyButton" 
                    Content="Copy to Clipboard" 
                    Width="140" 
                    Height="32" 
                    Click="Copy_Click" 
                    IsDefault="True"
                    Margin="0,0,10,0"
                    FontWeight="SemiBold"/>
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Width="80" 
                    Height="32" 
                    Click="Cancel_Click" 
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>

