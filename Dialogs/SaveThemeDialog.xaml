<Window x:Class="WindowsDb2Editor.Dialogs.SaveThemeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Save Custom Theme"
        Icon="pack://application:,,,/Resources/dEdge.ico"
        Width="450"
        Height="200"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="ðŸ’¾ Save Theme Customizations" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"
                   Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>

        <!-- Description -->
        <TextBlock Grid.Row="1" TextWrapping="Wrap" Margin="0,0,0,15"
                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}">
            Enter a name for your custom theme. You can use the suggested name or enter your own.
        </TextBlock>

        <!-- Theme Name Input -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="Theme Name:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="ThemeNameTextBox" FontSize="14" Padding="8,6"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save" Width="90" Height="32" IsDefault="True" Click="Save_Click" Margin="0,0,10,0"/>
            <Button Content="Cancel" Width="90" Height="32" IsCancel="True" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
