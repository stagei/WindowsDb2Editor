<Window x:Class="WindowsDb2Editor.Dialogs.TableDetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Table Details"
        SizeToContent="Height"
        Width="900"
        MinHeight="400"
        MaxHeight="900"
        MinWidth="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock x:Name="TableNameText" Text="Table Name" FontSize="20" FontWeight="Bold"
                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            <TextBlock x:Name="TableInfoText" Text="Schema.Table" FontSize="12" Margin="0,5,0,0"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
        </StackPanel>

        <!-- Tab Control for Different Views -->
        <TabControl Grid.Row="1" x:Name="DetailsTabControl">
            <!-- Columns Tab -->
            <TabItem Header="ðŸ“‹ Columns">
                <DataGrid x:Name="ColumnsGrid" 
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          AlternatingRowBackground="{DynamicResource SystemControlBackgroundAltHighBrush}"
                          GridLinesVisibility="All"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Column Name" Binding="{Binding ColumnName}" Width="*" MinWidth="150"/>
                        <DataGridTextColumn Header="Data Type" Binding="{Binding DataType}" Width="120"/>
                        <DataGridTextColumn Header="Length" Binding="{Binding Length}" Width="80"/>
                        <DataGridTextColumn Header="Nullable" Binding="{Binding Nullable}" Width="80"/>
                        <DataGridTextColumn Header="Default" Binding="{Binding DefaultValue}" Width="120"/>
                        <DataGridTextColumn Header="Remarks" Binding="{Binding Remarks}" Width="*" MinWidth="200"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Foreign Keys Tab -->
            <TabItem Header="ðŸ”— Foreign Keys">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <DataGrid Grid.Row="0" x:Name="ForeignKeysGrid" 
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              AlternatingRowBackground="{DynamicResource SystemControlBackgroundAltHighBrush}"
                              GridLinesVisibility="All"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              Margin="5"
                              SelectionMode="Single"
                              MouseDoubleClick="ForeignKey_DoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="FK Name" Binding="{Binding FKName}" Width="*" MinWidth="150"/>
                            <DataGridTextColumn Header="Column" Binding="{Binding FKColumn}" Width="150"/>
                            <DataGridTextColumn Header="References Table" Binding="{Binding PKTable}" Width="*" MinWidth="150"/>
                            <DataGridTextColumn Header="References Column" Binding="{Binding PKColumn}" Width="150"/>
                            <DataGridTextColumn Header="Delete Rule" Binding="{Binding DeleteRule}" Width="100"/>
                            <DataGridTextColumn Header="Update Rule" Binding="{Binding UpdateRule}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <TextBlock Grid.Row="1" Text="ðŸ’¡ Tip: Double-click a foreign key to view the referenced table" 
                               Margin="5,5,5,0" FontSize="11" FontStyle="Italic"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                </Grid>
            </TabItem>

            <!-- Indexes Tab -->
            <TabItem Header="ðŸ“Š Indexes">
                <DataGrid x:Name="IndexesGrid" 
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          AlternatingRowBackground="{DynamicResource SystemControlBackgroundAltHighBrush}"
                          GridLinesVisibility="All"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Index Name" Binding="{Binding IndexName}" Width="*" MinWidth="150"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding IndexType}" Width="100"/>
                        <DataGridTextColumn Header="Unique" Binding="{Binding IsUnique}" Width="80"/>
                        <DataGridTextColumn Header="Columns" Binding="{Binding Columns}" Width="*" MinWidth="200"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- DDL Tab -->
            <TabItem Header="ðŸ“ DDL Script">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBox Grid.Row="0" x:Name="DDLTextBox"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             IsReadOnly="True"
                             FontFamily="Consolas"
                             FontSize="12"
                             Margin="5"
                             Padding="10"
                             Background="{DynamicResource SystemControlBackgroundAltHighBrush}"/>
                    
                    <Button Grid.Row="1" Content="ðŸ“‹ Copy DDL" Width="100" Height="30" 
                            HorizontalAlignment="Right" Margin="5"
                            Click="CopyDDL_Click"/>
                </Grid>
            </TabItem>

            <!-- Statistics Tab -->
            <TabItem Header="ðŸ“ˆ Statistics">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Table Statistics" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Row Count:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="RowCountText" Text="Loading..." Margin="10,5"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Total Columns:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="ColumnCountText" Text="-" Margin="10,5"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Foreign Keys:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="FKCountText" Text="-" Margin="10,5"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Indexes:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="IndexCountText" Text="-" Margin="10,5"/>
                            
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Table Type:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="TableTypeText" Text="-" Margin="10,5"/>
                            
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Tablespace:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" x:Name="TablespaceText" Text="-" Margin="10,5"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <TabItem Header="ðŸ”— Incoming FK" x:Name="IncomingFKTab">
                <DataGrid x:Name="IncomingFKGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Referencing Schema" Binding="{Binding ReferencingSchema}" Width="150"/>
                        <DataGridTextColumn Header="Referencing Table" Binding="{Binding ReferencingTable}" Width="200"/>
                        <DataGridTextColumn Header="Constraint" Binding="{Binding ConstraintName}" Width="150"/>
                        <DataGridTextColumn Header="FK Columns" Binding="{Binding FkColumns}" Width="*"/>
                        <DataGridTextColumn Header="PK Columns" Binding="{Binding PkColumns}" Width="*"/>
                        <DataGridTextColumn Header="Delete Rule" Binding="{Binding DeleteRule}" Width="100"/>
                        <DataGridTextColumn Header="Update Rule" Binding="{Binding UpdateRule}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            
            <TabItem Header="ðŸ“¦ Used By Packages" x:Name="PackagesTab">
                <DataGrid x:Name="PackagesGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Schema" Binding="{Binding Schema}" Width="150"/>
                        <DataGridTextColumn Header="Package Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Last Used" Binding="{Binding LastUsed, StringFormat=yyyy-MM-dd}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            
            <TabItem Header="ðŸ‘ï¸ Used By Views" x:Name="ViewsTab">
                <DataGrid x:Name="ViewsGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Schema" Binding="{Binding Schema}" Width="150"/>
                        <DataGridTextColumn Header="View Name" Binding="{Binding Name}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            
            <TabItem Header="âš™ï¸ Used By Routines" x:Name="RoutinesTab">
                <DataGrid x:Name="RoutinesGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Type" Binding="{Binding ObjectType}" Width="120"/>
                        <DataGridTextColumn Header="Schema" Binding="{Binding Schema}" Width="150"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="ðŸ” Query Top 1000 Rows" Width="160" Height="32" Margin="0,0,10,0" 
                    Click="QueryTable_Click" FontWeight="SemiBold"/>
            <Button Content="Close" Width="100" Height="32" IsCancel="True" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>

