<Window x:Class="WindowsDb2Editor.Dialogs.ExportToClipboardDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="Copy to Clipboard"
        Icon="pack://application:,,,/Resources/dEdge.ico"
        SizeToContent="Height"
        Width="450"
        MinHeight="350"
        MaxHeight="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Select Export Format" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"
                   Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>

        <!-- Row count info -->
        <TextBlock Grid.Row="1" 
                   x:Name="RowCountInfo"
                   Text="Ready to export X rows"
                   FontSize="12"
                   Margin="0,0,0,15"
                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>

        <!-- Format selection -->
        <GroupBox Grid.Row="2" 
                  Header="Choose Format" 
                  Margin="0,0,0,15"
                  Padding="10"
                  Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}">
            <StackPanel>
                <RadioButton x:Name="CsvRadio" 
                             Content="CSV (Comma-Separated Values)" 
                             IsChecked="True" 
                             Margin="0,5"
                             Checked="FormatRadio_Changed"
                             Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                <RadioButton x:Name="TsvRadio" 
                             Content="TSV (Tab-Separated Values)" 
                             Margin="0,5"
                             Checked="FormatRadio_Changed"
                             Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                <RadioButton x:Name="JsonRadio" 
                             Content="JSON (JavaScript Object Notation)" 
                             Margin="0,5"
                             Checked="FormatRadio_Changed"
                             Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                <RadioButton x:Name="XmlRadio" 
                             Content="XML (Extensible Markup Language)" 
                             Margin="0,5"
                             Checked="FormatRadio_Changed"
                             Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            </StackPanel>
        </GroupBox>

        <!-- Options -->
        <GroupBox Grid.Row="3" 
                  Header="Options" 
                  Margin="0,0,0,15"
                  Padding="10"
                  Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}">
            <StackPanel>
                <CheckBox x:Name="HeadersOnlyCheckBox" 
                          Content="Copy Headers Only (no data rows)" 
                          IsChecked="False" 
                          Margin="0,5"
                          Checked="HeadersOnly_Changed"
                          Unchecked="HeadersOnly_Changed"
                          Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                          ToolTip="Copy only column headers as comma-separated string (CSV/TSV only)"/>
                <CheckBox x:Name="IncludeHeadersCheckBox" 
                          Content="Include Column Headers with data" 
                          IsChecked="True" 
                          Margin="0,5"
                          Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                          ToolTip="Include column headers as the first row (CSV/TSV only)"/>
            </StackPanel>
        </GroupBox>

        <!-- Progress indicator -->
        <StackPanel Grid.Row="4" 
                    x:Name="ProgressPanel" 
                    Visibility="Collapsed"
                    VerticalAlignment="Center">
            <TextBlock x:Name="ProgressText" 
                       Text="Processing..." 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,10"
                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            <ProgressBar x:Name="ProgressBar" 
                         Height="20" 
                         Minimum="0" 
                         Maximum="100" 
                         Value="0"/>
            <TextBlock x:Name="ProgressPercentage" 
                       Text="0%" 
                       HorizontalAlignment="Center" 
                       Margin="0,5,0,0"
                       FontWeight="Bold"
                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button x:Name="CopyButton" 
                    Content="Copy to Clipboard" 
                    Width="140" 
                    Height="32" 
                    Click="Copy_Click" 
                    IsDefault="True"
                    Margin="0,0,10,0"
                    FontWeight="SemiBold"/>
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Width="80" 
                    Height="32" 
                    Click="Cancel_Click" 
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>









