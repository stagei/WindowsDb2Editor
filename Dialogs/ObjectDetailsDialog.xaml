<Window x:Class="WindowsDb2Editor.Dialogs.ObjectDetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Object Details"
        Width="700"
        Height="600"
        MinWidth="600"
        MinHeight="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock x:Name="ObjectNameText" Text="Object Name" FontSize="22" FontWeight="Bold"
                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            <TextBlock x:Name="ObjectTypeText" Text="Type" FontSize="13" Margin="0,5,0,0"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
        </StackPanel>

        <!-- Tab Control for Details -->
        <TabControl Grid.Row="1" x:Name="DetailsTabControl">
            <!-- Properties Tab -->
            <TabItem Header="ðŸ“‹ Properties" x:Name="PropertiesTab">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="PropertiesPanel" Margin="10">
                        <!-- Properties will be added dynamically -->
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Source Code Tab (for procedures, functions, views) -->
            <TabItem Header="ðŸ“„ Source Code" x:Name="SourceCodeTab" Visibility="Collapsed">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBox x:Name="SourceCodeTextBox" 
                             IsReadOnly="True"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             FontFamily="Consolas"
                             FontSize="12"
                             TextWrapping="NoWrap"
                             AcceptsReturn="True"/>
                    
                    <Button Grid.Row="1" Content="ðŸ“‹ Copy to Clipboard" 
                            Width="150" Height="32" Margin="0,10,0,0"
                            HorizontalAlignment="Right"
                            Click="CopySourceCode_Click"/>
                </Grid>
            </TabItem>

            <!-- CREATE DDL Tab (Advanced/DBA only) -->
            <TabItem Header="ðŸ“ CREATE DDL" x:Name="CreateDdlTab" Visibility="Collapsed">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="CREATE statement for this object:" 
                               Margin="0,0,0,10" FontWeight="SemiBold"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                    
                    <TextBox Grid.Row="1" x:Name="CreateDdlTextBox" 
                             IsReadOnly="True"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             FontFamily="Consolas"
                             FontSize="12"
                             TextWrapping="NoWrap"
                             AcceptsReturn="True"
                             Background="{DynamicResource SystemControlBackgroundAltHighBrush}"/>
                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="ðŸ“‹ Copy to Clipboard" Width="150" Height="32" Margin="0,0,10,0"
                                Click="CopyCreateDdl_Click"/>
                        <Button Content="ðŸ“¤ Open in New Tab" Width="150" Height="32"
                                Click="OpenCreateDdlInNewTab_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- DROP DDL Tab (Advanced/DBA only) -->
            <TabItem Header="ðŸ—‘ï¸ DROP DDL" x:Name="DropDdlTab" Visibility="Collapsed">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="âš ï¸ WARNING: DROP statement will permanently delete this object!" 
                                   Foreground="Red" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="Review carefully before executing. This action cannot be undone." 
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                    </StackPanel>
                    
                    <TextBox Grid.Row="1" x:Name="DropDdlTextBox" 
                             IsReadOnly="True"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             FontFamily="Consolas"
                             FontSize="12"
                             TextWrapping="NoWrap"
                             AcceptsReturn="True"
                             Background="{DynamicResource SystemControlBackgroundAltHighBrush}"/>
                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="ðŸ“‹ Copy to Clipboard" Width="150" Height="32" Margin="0,0,10,0"
                                Click="CopyDropDdl_Click"/>
                        <Button Content="ðŸ“¤ Open in New Tab" Width="150" Height="32"
                                Click="OpenDropDdlInNewTab_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Dependencies Tab -->
            <TabItem Header="ðŸ”— Dependencies" x:Name="DependenciesTab" Visibility="Collapsed">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Objects that this object depends on:" 
                               Margin="0,0,0,10" FontWeight="SemiBold"/>
                    
                    <DataGrid Grid.Row="1" x:Name="DependenciesGrid" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Type" Binding="{Binding [Type]}" Width="120"/>
                            <DataGridTextColumn Header="Schema" Binding="{Binding [Schema]}" Width="150"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding [Name]}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Close" Width="100" Height="32" IsCancel="True" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>

