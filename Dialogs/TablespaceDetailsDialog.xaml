<Window x:Class="WindowsDb2Editor.Dialogs.TablespaceDetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Tablespace Details"
        Icon="pack://application:,,,/Resources/dEdge.ico"
        Width="900"
        Height="650"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ’¾" FontSize="32" Margin="0,0,15,0" VerticalAlignment="Center"/>
                <StackPanel>
                    <TextBlock x:Name="TablespaceNameText" Text="Tablespace" FontSize="20" FontWeight="Bold"
                               Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                    <TextBlock x:Name="TablespaceInfoText" Text="Type â€¢ Page size â€¢ Owner" FontSize="12" Margin="0,5,0,0"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- Content - TabControl -->
        <TabControl Grid.Row="1" Margin="0,0,0,10">
            <!-- Details Tab -->
            <TabItem Header="ðŸ“‹ Details">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Tablespace Name:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="TablespaceNameValue" IsReadOnly="True" Margin="0,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Type:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="TablespaceTypeValue" IsReadOnly="True" Margin="0,5"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Data Type:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="DataTypeValue" IsReadOnly="True" Margin="0,5"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Page Size (bytes):" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="PageSizeValue" IsReadOnly="True" Margin="0,5"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Owner:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBox Grid.Row="4" Grid.Column="1" x:Name="OwnerValue" IsReadOnly="True" Margin="0,5"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Created:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBox Grid.Row="5" Grid.Column="1" x:Name="CreateTimeValue" IsReadOnly="True" Margin="0,5"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Remarks:" FontWeight="SemiBold" Margin="0,5" VerticalAlignment="Top"/>
                            <TextBox Grid.Row="6" Grid.Column="1" x:Name="RemarksValue" IsReadOnly="True" Margin="0,5"
                                     TextWrapping="Wrap" MinHeight="80" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Tables Tab -->
            <TabItem Header="ðŸ“Š Tables">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" x:Name="TablesCountText" Text="Loading tables..." 
                               Margin="0,0,0,10" FontStyle="Italic"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>

                    <DataGrid Grid.Row="1" x:Name="TablesDataGrid" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionMode="Single"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              AlternatingRowBackground="{DynamicResource SystemControlBackgroundListLowBrush}"
                              MouseDoubleClick="TablesDataGrid_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Schema" Binding="{Binding Schema}" Width="150"/>
                            <DataGridTextColumn Header="Table Name" Binding="{Binding TableName}" Width="250"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding TableType}" Width="100"/>
                            <DataGridTextColumn Header="Row Count" Binding="{Binding RowCount, StringFormat=N0}" Width="120"/>
                            <DataGridTemplateColumn Header="Full Name" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <Hyperlink Click="TableLink_Click" Tag="{Binding}">
                                                <Run Text="{Binding FullName, Mode=OneWay}"/>
                                            </Hyperlink>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBlock Grid.Row="2" Text="ðŸ’¡ Tip: Double-click a row or click the hyperlink to open table properties" 
                               Margin="0,10,0,0" FontSize="11" FontStyle="Italic"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                </Grid>
            </TabItem>

            <!-- Indexes Tab -->
            <TabItem Header="ðŸ” Indexes">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" x:Name="IndexesCountText" Text="Loading indexes..." 
                               Margin="0,0,0,10" FontStyle="Italic"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>

                    <DataGrid Grid.Row="1" x:Name="IndexesDataGrid" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionMode="Single"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              AlternatingRowBackground="{DynamicResource SystemControlBackgroundListLowBrush}"
                              MouseDoubleClick="IndexesDataGrid_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Schema" Binding="{Binding Schema}" Width="150"/>
                            <DataGridTextColumn Header="Index Name" Binding="{Binding IndexName}" Width="200"/>
                            <DataGridTextColumn Header="Table Name" Binding="{Binding TableName}" Width="200"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding IndexType}" Width="100"/>
                            <DataGridTemplateColumn Header="Table (Schema.Name)" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <Hyperlink Click="IndexTableLink_Click" Tag="{Binding}">
                                                <Run Text="{Binding TableFullName, Mode=OneWay}"/>
                                            </Hyperlink>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBlock Grid.Row="2" Text="ðŸ’¡ Tip: Double-click a row or click the hyperlink to open the parent table properties" 
                               Margin="0,10,0,0" FontSize="11" FontStyle="Italic"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Close" Width="100" IsDefault="True" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
