<Window x:Class="WindowsDb2Editor.Dialogs.ConnectionInfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Connection Information"
        Icon="pack://application:,,,/Resources/dEdge.ico"
        SizeToContent="Height"
        Width="500"
        MinHeight="300"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Connection Details" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Server:" FontWeight="SemiBold" Margin="0,5"/>
            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="ServerText" Margin="10,5"/>
            
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Port:" FontWeight="SemiBold" Margin="0,5"/>
            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="PortText" Margin="10,5"/>
            
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Database:" FontWeight="SemiBold" Margin="0,5"/>
            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="DatabaseText" Margin="10,5"/>
            
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Username:" FontWeight="SemiBold" Margin="0,5"/>
            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="UsernameText" Margin="10,5"/>
            
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Access Level:" FontWeight="SemiBold" Margin="0,5"/>
            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="AccessLevelText" Margin="10,5" FontWeight="Bold"/>
            
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Connected Since:" FontWeight="SemiBold" Margin="0,5"/>
            <TextBlock Grid.Row="5" Grid.Column="1" x:Name="ConnectedSinceText" Margin="10,5"/>
            
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Duration:" FontWeight="SemiBold" Margin="0,5"/>
            <TextBlock Grid.Row="6" Grid.Column="1" x:Name="DurationText" Margin="10,5"/>
            
            <TextBlock Grid.Row="7" Grid.Column="0" Text="Auto-Commit:" FontWeight="SemiBold" Margin="0,5"/>
            <TextBlock Grid.Row="7" Grid.Column="1" x:Name="AutoCommitText" Margin="10,5"/>
            
            <TextBlock Grid.Row="8" Grid.Column="0" Text="Read-Only:" FontWeight="SemiBold" Margin="0,5"/>
            <TextBlock Grid.Row="8" Grid.Column="1" x:Name="ReadOnlyText" Margin="10,5"/>
            
            <TextBlock Grid.Row="9" Grid.Column="0" Text="Database Version:" FontWeight="SemiBold" Margin="0,5"/>
            <TextBlock Grid.Row="9" Grid.Column="1" x:Name="VersionText" Margin="10,5"/>
        </Grid>
        
        <Button Grid.Row="2" Content="Close" IsCancel="True" Padding="15,8" 
                HorizontalAlignment="Right" Margin="0,20,0,0"/>
    </Grid>
</Window>

