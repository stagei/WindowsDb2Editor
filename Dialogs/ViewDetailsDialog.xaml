<Window x:Class="WindowsDb2Editor.Dialogs.ViewDetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="View Details"
        Icon="pack://application:,,,/Resources/dEdge.ico"
        Width="800"
        Height="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock x:Name="ViewNameText" Text="View Name" FontSize="20" FontWeight="Bold"/>
            <TextBlock x:Name="ViewInfoText" Text="Schema.View" FontSize="12" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" x:Name="DetailsTabControl">
            <!-- Definition Tab -->
            <TabItem Header="ðŸ“œ Definition">
                <TextBox x:Name="DefinitionTextBox" 
                         IsReadOnly="True"
                         AcceptsReturn="True"
                         TextWrapping="NoWrap"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         FontSize="12"
                         Margin="5"/>
            </TabItem>

            <!-- Columns Tab -->
            <TabItem Header="ðŸ“‹ Columns">
                <DataGrid x:Name="ColumnsGrid" 
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Column Name" Binding="{Binding [ColumnName]}" Width="*"/>
                        <DataGridTextColumn Header="Data Type" Binding="{Binding [DataType]}" Width="120"/>
                        <DataGridTextColumn Header="Nullable" Binding="{Binding [Nullable]}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Dependencies Tab -->
            <TabItem Header="ðŸ”— Dependencies">
                <ListBox x:Name="DependenciesListBox" Margin="5"/>
            </TabItem>

            <!-- AI Assistant Tab -->
            <TabItem Header="ðŸ¤– AI Assistant">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox x:Name="AiResponseText" 
                             Grid.Row="0"
                             IsReadOnly="True"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,10"
                             Text="[AI Assistant - Not configured]&#10;&#10;Configure an AI provider (Ollama, OpenAI, Claude, etc.) in Settings to enable AI-powered explanations of this view's purpose, usage patterns, and relationships."/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="ðŸ“¤ Export Context" Width="150" Margin="0,0,10,0" Click="ExportContext_Click"/>
                        <Button Content="ðŸ”„ Refresh Analysis" Width="150" Click="RefreshAnalysis_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="ðŸ“Œ Dock as Tab" Width="120" Height="32" Margin="0,0,10,0" 
                    Click="DockAsTab_Click" ToolTip="Dock this dialog as a new tab in the main window"/>
            <Button Content="Close" Width="100" Height="32" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>

