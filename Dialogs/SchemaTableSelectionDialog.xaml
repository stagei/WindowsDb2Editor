<Window x:Class="WindowsDb2Editor.Dialogs.SchemaTableSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Select Tables for Diagram"
        Icon="pack://application:,,,/Resources/dEdge.ico"
        Width="600"
        Height="700"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Select Tables to Include" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="FilterTextBox" ui:ControlHelper.PlaceholderText="Filter tables..." Width="300" Margin="0,0,10,0"/>
            <Button Content="Select All" Click="SelectAll_Click" Padding="10,5" Margin="0,0,5,0"/>
            <Button Content="Clear All" Click="ClearAll_Click" Padding="10,5"/>
        </StackPanel>
        
        <TreeView x:Name="SchemaTreeView" Grid.Row="2" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                  BorderThickness="1">
            <TreeView.ItemContainerStyle>
                <Style TargetType="TreeViewItem" BasedOn="{StaticResource {x:Type TreeViewItem}}">
                    <Setter Property="IsExpanded" Value="True"/>
                </Style>
            </TreeView.ItemContainerStyle>
        </TreeView>
        
        <TextBlock Grid.Row="3" x:Name="SelectionCountText" Margin="0,10" FontStyle="Italic" Foreground="Gray"/>
        
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Generate Diagram" Click="OK_Click" IsDefault="True" Padding="15,8" Margin="0,0,10,0"/>
            <Button Content="Cancel" IsCancel="True" Padding="15,8"/>
        </StackPanel>
    </Grid>
</Window>

