<Window x:Class="WindowsDb2Editor.Dialogs.AlterStatementReviewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Review and Execute ALTER Statements"
        Icon="pack://application:,,,/Resources/dEdge.ico"
        Width="900"
        Height="700"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Warning Header -->
        <Border Grid.Row="0" Background="#3d3d1a" Padding="15" Margin="0,0,0,15" CornerRadius="4">
            <StackPanel>
                <TextBlock Text="âš ï¸  Review ALTER Statements Before Executing" FontSize="16" FontWeight="Bold" Foreground="#dcdcaa"/>
                <TextBlock Text="These statements will modify your database schema. Review carefully before executing." 
                           Foreground="Gray" Margin="0,5,0,0" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
        
        <!-- Summary -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock x:Name="SummaryText" Text="5 ALTER statements generated" FontWeight="SemiBold" FontSize="14"/>
            <TextBlock Text="  â€¢  " Foreground="Gray" Margin="5,0"/>
            <TextBlock x:Name="SelectedCountText" Text="5 selected" Foreground="Gray"/>
        </StackPanel>
        
        <!-- Statement List with Checkboxes -->
        <Border Grid.Row="2" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                BorderThickness="1" Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="StatementListPanel" Margin="10"/>
            </ScrollViewer>
        </Border>
        
        <!-- Action Buttons -->
        <Grid Grid.Row="3" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left side buttons -->
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button Content="ðŸ“‹ Copy All" Click="CopyAll_Click" Padding="12,8" Margin="0,0,10,0"/>
                <Button Content="ðŸ“‹ Copy Selected" Click="CopySelected_Click" Padding="12,8" Margin="0,0,10,0"/>
                <Button Content="ðŸ’¾ Save to File" Click="SaveToFile_Click" Padding="12,8"/>
            </StackPanel>
            
            <!-- Right side buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="ExecuteButton" Content="â–¶ï¸  Execute Selected" Click="Execute_Click" 
                        Padding="15,8" Margin="0,0,10,0"
                        Background="#0e639c" Foreground="White" FontWeight="SemiBold"/>
                <Button Content="Cancel" IsCancel="True" Padding="15,8"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

