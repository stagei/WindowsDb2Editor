<Window x:Class="WindowsDb2Editor.Dialogs.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Error"
        Icon="pack://application:,,,/Resources/dEdge.ico"
        Width="500"
        MinWidth="400"
        MaxWidth="800"
        SizeToContent="Height"
        MinHeight="200"
        MaxHeight="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
        Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Error Icon and Title -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="âš ï¸" FontSize="32" VerticalAlignment="Center" Margin="0,0,15,0"/>
            <StackPanel VerticalAlignment="Center">
                <TextBlock x:Name="ErrorTitleText" 
                           Text="An error occurred" 
                           FontSize="18" 
                           FontWeight="SemiBold"/>
                <TextBlock x:Name="ErrorTypeText" 
                           Text="" 
                           FontSize="11" 
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                           Visibility="Collapsed"/>
            </StackPanel>
        </StackPanel>

        <!-- Brief Error Message -->
        <Border Grid.Row="1" 
                Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="1"
                Padding="15"
                CornerRadius="4"
                Margin="0,0,0,15">
            <TextBlock x:Name="ErrorMessageText" 
                       Text="Error message will appear here..."
                       TextWrapping="Wrap"
                       FontSize="13"/>
        </Border>

        <!-- Expand/Collapse Details Button -->
        <ToggleButton x:Name="ExpandDetailsButton"
                      Grid.Row="2"
                      Content="â–¶ Show Details"
                      HorizontalAlignment="Left"
                      Padding="10,5"
                      Margin="0,0,0,10"
                      Click="ExpandDetailsButton_Click"/>

        <!-- Expandable Details Section -->
        <Border x:Name="DetailsBorder"
                Grid.Row="3"
                Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Visibility="Collapsed"
                Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Details Header -->
                <Border Grid.Row="0" 
                        Background="{DynamicResource SystemControlBackgroundBaseMediumLowBrush}"
                        Padding="10,5">
                    <TextBlock Text="Technical Details (Stack Trace)" 
                               FontWeight="SemiBold" 
                               FontSize="11"/>
                </Border>
                
                <!-- Stack Trace Content -->
                <ScrollViewer Grid.Row="1" 
                              MaxHeight="250" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto">
                    <TextBox x:Name="DetailsTextBox"
                             IsReadOnly="True"
                             TextWrapping="NoWrap"
                             FontFamily="Consolas"
                             FontSize="11"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="10"/>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="CopyButton"
                    Content="ðŸ“‹ Copy to Clipboard"
                    Padding="15,8"
                    Margin="0,0,10,0"
                    Click="CopyButton_Click"
                    ToolTip="Copy full error details for bug reports"/>
            <Button x:Name="OkButton"
                    Content="OK"
                    Width="100"
                    Padding="15,8"
                    Click="OkButton_Click"
                    IsDefault="True"
                    Style="{StaticResource AccentButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
