<Window x:Class="WindowsDb2Editor.Dialogs.SqlStatementViewerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="SQL Statement Viewer"
        Icon="pack://application:,,,/Resources/dEdge.ico"
        Width="800"
        Height="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock x:Name="StatementTitleText" Text="SQL Statement" FontSize="18" FontWeight="Bold"
                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
        </StackPanel>

        <!-- SQL Text Box -->
        <Border Grid.Row="1" Background="{DynamicResource SystemControlBackgroundAltHighBrush}" 
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="1" CornerRadius="4" Padding="10">
            <TextBox x:Name="SqlTextBox" 
                     IsReadOnly="True"
                     AcceptsReturn="True"
                     TextWrapping="NoWrap"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     FontFamily="Consolas"
                     FontSize="12"
                     Background="Transparent"
                     BorderThickness="0"/>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="ðŸ“‹ Copy to Clipboard" Width="160" Height="36" Margin="0,0,10,0"
                    Click="CopyToClipboard_Click"/>
            <Button Content="âž• Add to Editor" Width="140" Height="36" Margin="0,0,10,0"
                    Click="AddToEditor_Click"/>
            <Button Content="Close" Width="100" Height="36" IsCancel="True" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>

