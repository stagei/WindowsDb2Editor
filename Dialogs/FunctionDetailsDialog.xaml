<Window x:Class="WindowsDb2Editor.Dialogs.FunctionDetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Function Details"
        Icon="pack://application:,,,/Resources/dEdge.ico"
        Width="900"
        Height="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock x:Name="FunctionNameText" Text="Function Name" FontSize="20" FontWeight="Bold"/>
            <TextBlock x:Name="FunctionInfoText" Text="Schema.Function" FontSize="12" Margin="0,5,0,0"/>
        </StackPanel>

        <TabControl Grid.Row="1" x:Name="DetailsTabControl">
            <TabItem Header="ðŸ“œ Source Code">
                <TextBox x:Name="SourceCodeTextBox" 
                         IsReadOnly="True"
                         AcceptsReturn="True"
                         TextWrapping="NoWrap"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         FontSize="12"
                         Margin="5"/>
            </TabItem>

            <TabItem Header="ðŸ“¥ Parameters">
                <DataGrid x:Name="ParametersGrid" 
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Parameter" Binding="{Binding [PARMNAME]}" Width="*"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding [TYPENAME]}" Width="120"/>
                        <DataGridTextColumn Header="Mode" Binding="{Binding [PARM_MODE]}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="ðŸ¤– AI Assistant">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox x:Name="AiResponseText" 
                             Grid.Row="0"
                             IsReadOnly="True"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,10"
                             Text="[AI Assistant - Not configured]&#10;&#10;Configure an AI provider to analyze this function's logic, explain its purpose, and suggest improvements."/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="ðŸ“¤ Export Context" Width="150" Margin="0,0,10,0" Click="ExportContext_Click"/>
                        <Button Content="ðŸ”„ Analyze Code" Width="150" Click="AnalyzeCode_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="ðŸ“Œ Dock as Tab" Width="120" Height="32" Margin="0,0,10,0" 
                    Click="DockAsTab_Click" ToolTip="Open source code in a new editor tab"/>
            <Button Content="Close" Width="100" Height="32" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>

