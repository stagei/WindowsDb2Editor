<Window x:Class="WindowsDb2Editor.Dialogs.DdlGeneratorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        Title="DDL Generator"
        SizeToContent="Height"
        Width="900"
        MinHeight="500"
        MaxHeight="900"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Schema:" Margin="0,0,0,5"/>
            <ComboBox x:Name="SchemaComboBox" SelectionChanged="SchemaComboBox_SelectionChanged"/>
            <TextBlock Text="Table:" Margin="0,10,0,5"/>
            <ComboBox x:Name="TableComboBox"/>
            <CheckBox x:Name="EntireSchemaCheckBox" Content="Generate entire schema DDL" Margin="0,10,0,0" Checked="EntireSchema_Changed" Unchecked="EntireSchema_Changed"/>
        </StackPanel>
        
        <avalonedit:TextEditor Grid.Row="1" x:Name="DdlEditor" IsReadOnly="True" 
                               FontFamily="Consolas" FontSize="12" ShowLineNumbers="True" Margin="0,0,0,10"/>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="GenerateButton" Content="âš¡ Generate DDL" Click="GenerateButton_Click" Padding="10,5" Margin="5,0"/>
            <Button x:Name="CopyButton" Content="ðŸ“‹ Copy" Click="CopyButton_Click" Padding="10,5" Margin="5,0"/>
            <Button x:Name="SaveButton" Content="ðŸ’¾ Save" Click="SaveButton_Click" Padding="10,5" Margin="5,0"/>
            <Button Content="Close" IsCancel="True" Padding="10,5" Margin="5,0"/>
        </StackPanel>
    </Grid>
</Window>

