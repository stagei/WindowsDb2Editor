<Window x:Class="WindowsDb2Editor.Dialogs.MermaidPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Mermaid Preview - Live"
        Icon="pack://application:,,,/Resources/dEdge.ico"
        Width="1200"
        Height="900"
        MinWidth="800"
        MinHeight="600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <ToolBar Grid.Row="0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}">
            <Button x:Name="RefreshButton" Content="ðŸ”„ Refresh" Click="Refresh_Click" Padding="10,5" ToolTip="Manually refresh preview"/>
            <Separator/>
            <Button x:Name="ZoomInButton" Content="ðŸ”+" Click="ZoomIn_Click" Padding="10,5" ToolTip="Zoom in"/>
            <Button x:Name="ZoomOutButton" Content="ðŸ”-" Click="ZoomOut_Click" Padding="10,5" ToolTip="Zoom out"/>
            <Button x:Name="ZoomResetButton" Content="100%" Click="ZoomReset_Click" Padding="10,5" ToolTip="Reset zoom"/>
            <Separator/>
            <CheckBox x:Name="AutoRefreshCheckBox" Content="Auto-refresh" IsChecked="True" VerticalAlignment="Center" Margin="5,0"/>
            <Separator/>
            <TextBlock x:Name="ConnectionInfoText" VerticalAlignment="Center" Foreground="#AAAAAA" Margin="10,0"/>
        </ToolBar>
        
        <!-- WebView2 Preview -->
        <wv2:WebView2 Grid.Row="1" x:Name="PreviewWebView" />
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem x:Name="StatusText" Content="Ready - Preview synced with editor"/>
            <Separator/>
            <StatusBarItem x:Name="TableCountStatus" Content="Tables: 0"/>
            <Separator/>
            <StatusBarItem x:Name="LastUpdateStatus" Content="Last update: --:--:--"/>
        </StatusBar>
    </Grid>
</Window>
