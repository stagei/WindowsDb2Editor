<Window x:Class="WindowsDb2Editor.Dialogs.MissingFKJobLogViewerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Missing FK Discovery Job Log"
        Icon="pack://application:,,,/Resources/dEdge.ico"
        Width="900"
        Height="700"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" x:Name="JobStatusText" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
        
        <Border Grid.Row="1" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                BorderThickness="1" Padding="5">
            <avalonedit:TextEditor x:Name="LogEditor" 
                                   IsReadOnly="True" 
                                   FontFamily="Consolas" 
                                   FontSize="12" 
                                   ShowLineNumbers="True"
                                   WordWrap="False"
                                   VerticalScrollBarVisibility="Auto"
                                   HorizontalScrollBarVisibility="Auto"/>
        </Border>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Refresh" Click="RefreshLog_Click" Padding="10,5" Margin="0,0,5,0"/>
            <Button Content="Close" Click="Close_Click" Padding="10,5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
