<Application x:Class="WindowsDb2Editor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WindowsDb2Editor"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:ui="http://schemas.modernwpf.com/2019">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Theme is set programmatically in App.xaml.cs OnStartup -->
                <ui:ThemeResources />
                <ui:XamlControlsResources />
            </ResourceDictionary.MergedDictionaries>

            <!-- Global font scaling defaults (updated by FontSizeManager when Ctrl+Plus/Minus) -->
            <sys:Double x:Key="BaseFontSize">12</sys:Double>
            <sys:Double x:Key="GridFontSize">12</sys:Double>
            <sys:Double x:Key="GridRowHeight">25</sys:Double>
            <sys:Double x:Key="ControlHeight">28</sys:Double>
            <sys:Double x:Key="ButtonHeight">30</sys:Double>
            <sys:Double x:Key="TreeViewItemHeight">21.6</sys:Double>
            <sys:Double x:Key="ListBoxItemHeight">24</sys:Double>
            <sys:Double x:Key="MenuItemHeight">24</sys:Double>

            <!-- Default window icon (title bar) -->
            <Style TargetType="{x:Type Window}">
                <Setter Property="Icon" Value="pack://application:,,,/Resources/dEdge.ico"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
